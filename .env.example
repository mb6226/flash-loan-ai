# نمونه متغیرهای محیطی (.env)
# ---------------------------
# API Keys
INFURA_KEY=your_infura_free_key
ETHERSCAN_KEY=your_etherscan_key

# Wallet (فقط برای testnet اولیه تست کنید؛ هیچ‌گاه کلید اصلی را در مخزن وارد نکنید)
PRIVATE_KEY=your_testnet_private_key
WALLET_ADDRESS=your_wallet_address

# Telegram Bot (برای اعلان‌ها)
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Flashbots signing key (optional)
FLASHBOTS_SIGNING_KEY=your_flashbots_key

# Address of the executor contract (used for flashLoan receiver)
CONTRACT_ADDRESS=your_executor_contract_address

# Minimum profit threshold (ETH) used by strategies
MIN_PROFIT=0.05
